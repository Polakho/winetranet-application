<UserControl x:Class="winetranet_application.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:winetranet_application.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <PasswordBox x:Name="txtPassword"
                           FontSize="13"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           Foreground="White"
                           CaretBrush="Lightgray"
                           BorderBrush="DarkGray"
                         BorderThickness="0,0,0,1"
                         VerticalContentAlignment="Center"
                         Padding="20,0,0,0"
                           >
        <PasswordBox.Background>
            <ImageBrush ImageSource="/winetranet-application;component/Images/alternate_email_FILL0_wght500_GRAD-25_opsz24.png"
                                    Stretch="None"
                                    AlignmentX="Left"
                                    />
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
